<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ajstrand.itf_patterns.CreateNotificationDetailsFragment"
    tools:showIn="@layout/activity_create_notification_details">

    <Button
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendNotification"
        android:id="@+id/sendPatternNotification"/>

    <Spinner
        android:spinnerMode="dialog"
        android:id="@+id/my_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
